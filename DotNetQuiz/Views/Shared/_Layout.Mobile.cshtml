<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />

    <title>@ViewBag.Title</title>
    <meta name="viewport" content="width=device-width" />

    <link rel="stylesheet" href="@Url.Content("~/Content/jquery.mobile-1.0rc3.min.css")" />
    <link rel="stylesheet" href="@Url.Content("~/Content/Site.Mobile.css")" />
    <script src="@Url.Content("~/Scripts/jquery-1.6.3.min.js")" type="text/javascript"></script>
    <script type="text/javascript">
        $(document).bind("mobileinit", function () {
            // As of Beta 2, jQuery Mobile's Ajax navigation does not work in all cases (e.g.,
            // when navigating from a mobile to a non-mobile page), hence disabling it.
            $.mobile.ajaxEnabled = false;
        });
    </script>

@*
    <link rel="shortcut icon" href="@Url.Content("~/favicon.ico")">
    <link rel="apple-touch-icon" href="@Url.Content("~/apple-touch-icon.png")">*@

    <script src="@Url.Content("~/Scripts/jquery.mobile-1.0rc3.min.js")" type="text/javascript"></script>
</head>
<body>
    <div id="DotNetQuizPage" data-role="page" data-theme="a">
        @Html.Partial("_ViewSwitcher")
        <div data-role="header">
            <h1>@ViewBag.Title</h1>
        </div>
        <div id="MainContent" data-role="content">
            @RenderSection("featured", false)
            @RenderBody()
        </div>
    </div>
   @RenderSection("scripts")
</body>
</html>
